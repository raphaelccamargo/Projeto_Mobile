             xmlns:local="clr-namespace:Projeto_Coqui"
             x:Class="Projeto_Coqui.MainPage">

    <StackLayout>
        <!-- Place new controls here -->
        <Label x:Name="lblConexao"
            Text="" 
           HorizontalOptions="Center"
           VerticalOptions="CenterAndExpand" />

        <Button x:Name="btnConexao" 
                Text="Testar conexão" 
